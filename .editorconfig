; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,yml}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 4
indent_style = space

[*.{css,ctp,php}]
indent_style = tab

[*.bat]
end_of_line = crlf
